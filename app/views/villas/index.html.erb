<p id="notice"><%= notice %></p>

<h1>Villas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @villas.each do |villa| %>
      <tr>
        <td><%= villa.name %></td>
        <td><%= villa.amount %></td>
        <td><%= villa.location %></td>
        <td><%= link_to 'Show', villa %></td>
        <td><%= link_to 'Edit', edit_villa_path(villa) %></td>
        <td><%= link_to 'Destroy', villa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Villa', new_villa_path %>
